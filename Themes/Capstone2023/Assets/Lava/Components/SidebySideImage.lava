{%- assign sectionTitleAlignment  =  ContentChannel | Attribute:'SectionTitleAlignment','RawValue' -%}
{%- assign sectionBgClass  =  ContentChannel | Attribute:'SectionBackgroundColorClass' -%}
{%- assign sectionPadding  =  ContentChannel | Attribute:'SecPadMatrix' -%}

<section class="c-section -sideBySide {{sectionPadding}} c-section--{{ sectionType }}{% if sectionBackgroundImage != '' %} c-section--bgimg{% endif %}{% if sectionTitleStyle == "highlight" %} c-section--overlap-top{% endif %}  {{  sectionBgClass }}" style="{% if sectionBackgroundImage != '' %}background-image: url('/GetImage.ashx?Guid={{ sectionBackgroundImage }}&maxWidth=800&maxHeight=800');{% endif %}">
  <div class="container">
    <div class="row">
      <div class='{%- if sectionTitleStyle == "highlight" -%}col-lg-12{% else %}col-lg-12 center-block{%- endif %}'>
