          <div class="l-grid c-card--side-by-side{% if sectionTitleStyle == "hidden" %} c-card--big{% endif %}">
      {%- for item in Items -%}
{%- assign contentAlignment  =  item | Attribute:'ContentAlignment','RawValue' -%}
{%- assign contentWidth  =  item | Attribute:'ContentWidth','RawValue' -%}
{%- assign itemTitleStyle  =  item | Attribute:'ItemTitleStyle','RawValue' -%}
{%- assign itemTextAlignment  =  item | Attribute:'ItemTextAlignment','RawValue' -%}
{%- assign itemDescription  =  item | Attribute:'ItemDescription' -%}
{%- assign itemImage  =  item | Attribute:'ItemImage','RawValue' -%}
{%- assign buttons  =  item | Attribute:'Buttons' -%}

            <div class="l-grid__item c-card__media" style="grid-row: {{ forloop.index }} / {{ forloop.index }};{% if contentAlignment == "left" %} grid-column: 2 / 2;{% endif %} background-image: url('/GetImage.ashx?Guid={{ itemImage }}');"></div>
            <div class='l-grid__item c-card__body' style="grid-row: {{ forloop.index }} / {{ forloop.index }}">
              <div class="c-card__content stack {% if item.Content != '' %} alignEnd{% endif %}">
                {%- if itemDescription != '' -%}
                  <h4 class="c-card__description">{{ itemDescription }}</h4>
                {%- endif -%}
                {%- if itemTitleStyle != 'hidden' -%}
                  <{{ itemTitleStyle }} class="c-card__title{% if sectionTitleStyle == "highlight" %} c-card__title--med{% endif %}"><span>{{ item.Title }}</span></{{ itemTitleStyle }}>
                {%- endif -%}
                {{ item.Content }}
                {{buttons}}
              </div>
            </div>
      {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
